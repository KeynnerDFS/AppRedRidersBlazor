@page "/CadastrarCliente"

<PageTitle>Novo Cliente</PageTitle>

<main>
    <div id="container-login">
        <form id="container-form-login">
            <h2>Cliente</h2>
            <label for="Cliente-name">Nome:</label>
            <input type="text" for="Cliente-name" name="Nome" placeholder="Nome..." />
         
            <label for="Cliente-Endereco">Endereço:</label>
            <input type="text" for="Cliente-Endereco" name="Endereço" placeholder="Endereço..." />

            <label for="Cliente-Moradia">Distância Moradia:</label>
            <input type="text" for="Cliente-Moradia" name="Distância da Moradia" placeholder="Quilometragem...." />

            <label for="Cliente-Pagamento">Distância Moradia:</label>
            <input type="text" for="Cliente-Pagamento" name="Forma de pagamento" placeholder="Pix, Dinheiro ou Cartão.." />
         
            <label for="Cliente-Contado">Distância Moradia:</label>
            <input type="text" for="Cliente-Contato" name="Forma de Contato" placeholder="Telefone ou Email..." />
            
            <input type="submit" value="Cadastrar" />


        </form>
    </div>

</main>